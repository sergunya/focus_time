<idea-plugin>
  <id>com.focustime.nopplugin</id>
  <vendor email="developer@focustime.com" url="https://github.com/sergey-larionov">Focus Time</vendor>

  <description><![CDATA[
    A minimal plugin that replaces the editor caret with a fast Gopher icon.
    Toggle via Settings or action "Toggle Gopher Editor Cursor".
  ]]></description>

  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <projectConfigurable instance="com.focustime.nopplugin.settings.GopherCursorConfigurable"/>
    <!-- Force service instantiation after project startup -->
    <postStartupActivity implementation="com.focustime.nopplugin.startup.GopherCursorStartup"/>
  </extensions>

  <actions>
    <action id="com.focustime.nopplugin.actions.ToggleGopherCursor"
            class="com.focustime.nopplugin.actions.ToggleGopherCursorAction"
            text="Toggle Gopher Editor Cursor"
            description="Enable/Disable the Gopher cursor overlay in the Editor"/>
  </actions>
</idea-plugin>
